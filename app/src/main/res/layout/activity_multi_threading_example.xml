<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MultiThreadingExample">

    <Button
        android:id="@+id/btnHandlerPost"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="Handler Post"
        android:padding="2dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/tvThreadInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnHandlerDelay"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="Handler Delay"
        android:padding="2dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_dark"/>

    <Button
        android:id="@+id/btnStopHandler"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="Handler Stop"
        android:padding="2dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@android:color/holo_blue_dark"/>

    <Button
        android:id="@+id/btnAsyntask"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="Asyntask Start"
        android:padding="2dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/tvAsynInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>